{
  "logger": {
    "level": "info",
    "timestamp": false
  },
  "esclient": {
    "apiVersion": "2.4",
    "hosts": [
      { "host": "elasticsearch" }
    ]
  },
  "elasticsearch": {
    "settings": {
      "index": {
        "refresh_interval": "10s",
        "number_of_replicas": "0",
        "number_of_shards": "12"
      }
    }
  },
  "acceptance-tests": {
    "endpoints": {
      "docker": "http://api:4000/v1/"
    }
  },
   "api": {
    "targets": {
      "layers_by_source": {
         "geonames2d": ["country", "postalcode", "source","layer"],
          "geonames": ["country", "macroregion", "region", "county", "localadmin", "locality", "borough", "neighbourhood", "venue", "postalcode"]
      }
    },
    "textAnalyzer": "libpostal",
    "services": {
      "pip": { "url": "http://pip:4200" },
      "libpostal": { "url": "http://libpostal:4400" },
      "placeholder": { "url": "http://placeholder:4100" },
      "interpolation": { "url": "http://interpolation:4300" }
    },
    "defaultParameters": {
      "focus.point.lat": 48.88,
      "focus.point.lon": 2.32
    }
  },
  "imports": {
    "adminLookup": {
      "enabled": true
    },
    "geonames": {
      "datapath": "/data/geonames",
      "countryCode": "ALL",
      "sourceURL": "http://download.geonames.org/export/dump/"
    },
    "openstreetmap": {
      "download": [
        { "sourceURL": "https://download.geofabrik.de/europe-latest.osm.pbf" }
      ],
      "leveldbpath": "/tmp",
      "datapath": "/data/openstreetmap",
      "import": [{
        "filename": "europe-latest.osm.pbf"
      }]
    },
    "openaddresses": {
      "datapath": "/data/openaddresses",
      "files": [
      ]
    },
    "polyline": {
      "datapath": "/data/polylines",
      "files": [ "europe.polyline" ]
    },
    "whosonfirst": {
      "datapath": "/data/whosonfirst",
      "importVenues": false,
      "importPostalcodes": true,
      "importPlace": [ "85632997" ]
    },
    "csv": {
     "datapath": "/data/geonames-postalcodes",
      "files": [],
      "download": []
    }
  }
}
